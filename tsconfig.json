{
  "extends": "@eiog/ts-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~uni/*": [
        "src/uni_modules/*"
      ]
    },
    "types": [
      "vitest/globals",
      "@dcloudio/types",
      "unplugin-icons/types/vue",
      "@uni-helper/uni-app-types",
      "@intlify/unplugin-vue-i18n/messages",
      "wot-design-uni/global.d.ts",
      "nutui-uniapp/global.d.ts"
    ]
  },
  "include": [
    "*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules/**",
    "**/uni_modules/**",
    "dist"
  ]

}
